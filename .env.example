# Environment Configuration
ENV=development

# Google Cloud Project
GCP_PROJECT_ID=codeaudit-project
GCS_BUCKET_NAME=codeaudit-submissions
CLOUD_SQL_CONNECTION_NAME=codeaudit-project:us-central1:codeaudit-db

# Pub/Sub
PUBSUB_TOPIC=code-review-jobs
PUBSUB_SUBSCRIPTION=code-review-workers

# Database
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=codeaudit
DATABASE_URL=postgresql://postgres:password@localhost/codeaudit

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# JWT Secret
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend URL
FRONTEND_URL=http://localhost:3000
